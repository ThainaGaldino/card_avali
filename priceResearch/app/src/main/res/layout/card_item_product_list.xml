<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_item_List_product"
        android:backgroundTint="#c3c3c3"
        android:padding="6dp"
        android:layout_margin="6dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:padding="12dp" >

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/image_item_product_list"
                android:src="@mipmap/ic_launcher"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_item_product_name"
                android:text="Atum ralado em Ã²leo"
                android:textSize="18sp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="66dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:id="@+id/textview_item_product_price"
                android:textSize="12sp"
                android:text="8.95"
                android:layout_marginStart="66dp"
                android:layout_below="@id/textView_item_product_name"/>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar_item_product_price_perception"
                style="?android:ratingBarStyleSmall"
                android:layout_marginStart="66dp"
                android:layout_below="@id/textview_item_product_price"
                android:stepSize="0.5"/>

            <Button
                android:id="@+id/button_product_quantity"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:text="0"
                android:textSize="18sp"
                app:iconTint="#BFB8DD" />






        </RelativeLayout>

    </androidx.cardview.widget.CardView>













</LinearLayout>